# Production Environment Configuration for Dell R340 Server
# Copy this file to .env and update all values before deployment

# Django Settings
# Generate new key: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY='CHANGE_THIS_TO_NEW_RANDOM_SECRET_KEY'

# MUST be False in production!
DEBUG=False

# Database Configuration
DB_ENGINE=django.db.backends.postgresql
DB_NAME=djapp
DB_USER=tgt_inventory_user
DB_PASSWORD='CHANGE_THIS_TO_STRONG_PASSWORD'
DB_HOST=localhost
DB_PORT=5432

# Media Storage - Linux path for production server
MEDIA_ROOT=/var/www/tgt_inventory/media

# Security Settings
# Replace with your actual server IP and domain
ALLOWED_HOSTS=192.168.x.x,yourdomain.com,localhost

# CORS Configuration - MUST be False in production
CORS_ALLOW_ALL_ORIGINS=False
# Replace with your actual frontend URLs
CORS_ALLOWED_ORIGINS=http://192.168.x.x,https://yourdomain.com

# File Upload Settings (10MB limit)
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_EXTENSIONS=.jpg,.jpeg,.png,.gif,.webp
